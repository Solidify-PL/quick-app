<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.rhizomind.quickapp</groupId>
    <artifactId>qa</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Quick-app</name>
    <modules>
        <module>qa-core</module>
        <module>qa-ctl</module>
    </modules>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
    </properties>

    <scm>
        <url>https://bitbucket.org/solidify-pl/quick-app-v2</url>
        <connection>scm:git:git://ssh@bitbucket.org/solidify-pl/quick-app-v2.git</connection>
        <developerConnection>scm:git:ssh://git@bitbucket.org/solidify-pl/quick-app-v2.git</developerConnection>
    </scm>

    <distributionManagement>
        <repository>
            <id>maven-releases</id>
            <name>Solidify Quick-App releases repository</name>
            <url>https://nexus.solidify.deploy-sphere.cloud/repository/solidify-qa-releases/</url>
        </repository>
    </distributionManagement>

</project>
